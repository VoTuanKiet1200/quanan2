<!doctype html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>
        <%= title %>
    </title>

    <!-- Bootstrap Icons (nếu bạn dùng bi bi-...) -->
    <link rel="stylesheet" href="/vendor/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="../css/dangnhap.css">
    <link rel="icon" type="image/png" sizes="192x192" href="../images/logo2.png">

</head>

<body>
    <div class="auth-page">
        <div class="auth-card">

            <!-- CỘT TRÁI -->
            <div class="auth-left">
                <div class="auth-left-inner">
                    <h1 class="auth-title">Đăng nhập</h1>
                    <p class="auth-subtitle">Đăng nhập để quản lý đơn hàng, theo dõi ưu đãi và mua sắm nhanh hơn.</p>

                    <form method="POST" action="/dangnhap" class="auth-form">
                        <div class="auth-field">
                            <label class="auth-label" for="Email">Email</label>
                            <input id="Email" class="auth-input" name="Email" type="email" required
                                placeholder="Nhập email" autocomplete="username" />
                        </div>

                        <div class="auth-field">
                            <div class="auth-label-row">
                                <label class="auth-label" for="MatKhau">Mật khẩu</label>
                                <a class="auth-forgot" href="/quen-mat-khau">Quên mật khẩu?</a>
                            </div>

                            <div class="auth-password-wrap">
                                <input id="MatKhau" class="auth-input" name="MatKhau" type="password" required
                                    placeholder="••••••••" autocomplete="current-password" />
                                <button type="button" class="auth-eye-btn" id="togglePw" aria-label="Hiện/ẩn mật khẩu">
                                    <i class="bi bi-eye auth-eye-icon" id="eyeIcon"></i>
                                </button>
                            </div>
                        </div>

                        <div class="auth-remember">
                            <input id="remember" name="remember" type="checkbox" class="auth-remember-checkbox" />
                            <label for="remember" class="auth-remember-label">Ghi nhớ đăng nhập</label>
                        </div>

                        <button type="submit" class="auth-primary-btn">Đăng nhập</button>

                        <div class="auth-links-row">
                            <a class="auth-link" href="/dangky">Đăng ký tài khoản</a>
                            <span class="auth-links-separator">hoặc</span>
                            <a class="auth-link" href="/quen-mat-khau">Quên mật khẩu</a>
                        </div>

                        <div class="social-container1">
                            <a href="/auth/google" class="social">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c1/Google_%22G%22_logo.svg/2048px-Google_%22G%22_logo.svg.png"
                                    alt="Google">
                                Đăng nhập bằng Google
                            </a>

                            <a href="#" class="social" onclick="return false;">
                                <img src="https://i.pinimg.com/736x/ab/96/4b/ab964bcf79cbc2d86b15a9e2efe05ffa.jpg"
                                    alt="Facebook">
                                Đăng nhập bằng Facebook
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- CỘT PHẢI -->
            <div class="auth-right">
                <div class="auth-right-overlay"></div>
                <div class="auth-right-inner">
                    <h2 class="auth-right-title"><span class="hl">CHÀO MỪNG</span></h2>
                    <p class="auth-right-text">Nếu bạn chưa có tài khoản, hãy đăng ký để bắt đầu hành trình.</p>

                    <div class="auth-logo-circle">
                        <img src="/images/an.png" alt="Logo" class="auth-right-logo" />
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>
        const pw = document.getElementById("MatKhau");
        const btn = document.getElementById("togglePw");
        const icon = document.getElementById("eyeIcon");

        btn.addEventListener("click", () => {
            const show = pw.type === "password";
            pw.type = show ? "text" : "password";
            icon.className = show ? "bi bi-eye-slash auth-eye-icon" : "bi bi-eye auth-eye-icon";
        });
    </script>
</body>

</html>